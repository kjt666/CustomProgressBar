<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xinzhen.customprogressbar2.MainActivity">


    <com.xinzhen.customprogressbar2.customview.MyHoriztalProgressBar
        android:id="@+id/progressbar1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:progress="30" />

    <com.xinzhen.customprogressbar2.customview.MyHoriztalProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:progress="60"
        app:progressbar_reach_color="#000000"
        app:progressbar_reach_height="4dp"
        app:progressbar_text_color="#000000"
        app:progressbar_unreach_color="#ffffff"
        app:progressbar_unreach_height="3dp" />

    <com.xinzhen.customprogressbar2.customview.MyHoriztalProgressBar
        android:id="@+id/progressbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:progress="70"
        app:progressbar_reach_color="#4cdcdc"
        app:progressbar_reach_height="5dp"
        app:progressbar_text_color="#4cdcdc"
        app:progressbar_unreach_color="#aadddd"
        app:progressbar_unreach_height="3dp" />

    <com.xinzhen.customprogressbar2.customview.MyRoundProgressBar
        android:id="@+id/progressbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        app:progressbar_reach_color="#f7a63c"
        app:progressbar_text_color="#f7a63c"
        app:progressbar_unreach_color="#f7c06e" />

    <com.xinzhen.customprogressbar2.customview.MyRoundProgressBar
        android:id="@+id/progressbar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="100"
        app:progressbar_radius="60dp"
        app:progressbar_reach_color="#f456c5"
        app:progressbar_text_color="#f456c5"
        app:progressbar_text_size="18sp"
        app:progressbar_unreach_color="#f194e1" />

    <com.xinzhen.customprogressbar2.customview.MyRoundProgressBar2
        android:id="@+id/progressbar6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:progress="60"
        app:progressbar_radius="15dp"
        app:progressbar_reach_color="#218df2"
        app:progressbar_unreach_color="#218df2" />

   <com.xinzhen.customprogressbar2.customview.MyHoriztalProgressBar2
       android:id="@+id/progressbar7"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:progress="30"/>
</LinearLayout>
